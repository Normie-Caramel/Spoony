<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Spoony" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/_state_screen_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/_state_screen_color</item> <!--the trasition screen background color setting-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/_state_screen_color</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Spoony.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Spoony.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Spoony.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
