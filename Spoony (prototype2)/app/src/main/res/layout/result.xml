<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_state_screen_color"
    tools:context=".WhichAnswer"
    android:id="@+id/results_lyt_main">


    <TextView
        android:id="@+id/result_txt_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/baloo"
        android:text="[question asked] [....................]"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic"
        app:autoSizeTextType="uniform"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ImageView
            android:id="@+id/imageView_cloud1"
            android:layout_width="149dp"
            android:layout_height="108dp"
            android:layout_marginEnd="170dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView_cloud2"
            app:srcCompat="@drawable/cloud_back_5" app:layout_constraintBottom_toTopOf="@id/imageView_cloud3"
            android:layout_marginBottom="25dp"/>

    <ImageView
            android:id="@+id/imageView_cloud2"
            android:layout_width="116dp"
            android:layout_height="108dp"
            android:layout_marginStart="300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/cloud_back_2"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:id="@+id/imageView_cloud3"
            android:layout_width="167dp"
            android:layout_height="109dp"
            android:layout_marginEnd="188dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView_cloud4"
            app:srcCompat="@drawable/cloud_back_3"/>

    <ImageView
            android:id="@+id/imageView_cloud4"
            android:layout_width="142dp"
            android:layout_height="129dp"
            android:layout_marginStart="304dp"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/home_cloud_1"/>

    <TextView
            android:id="@+id/result_txt_outcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="[outcome]"
            android:textColor="@color/p1_color"
            android:textSize="40sp"
            android:textStyle="bold"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.471"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/result_txt_qguessed" android:layout_marginTop="30dp"/>

    <TextView
            android:text="[leadScore: 00]"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/result_txt_leadScore"
            app:layout_constraintTop_toBottomOf="@id/result_txt_outcome" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" android:textColor="@color/white" android:textSize="20sp"
            android:fontFamily="@font/baloo" android:layout_marginTop="20dp"/>
    <TextView
            android:text="[followScore: 00]"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/result_txt_followScore"
            app:layout_constraintTop_toBottomOf="@id/result_txt_leadScore" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" android:textColor="@color/white" android:textSize="20sp"
            android:fontFamily="@font/baloo" android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/result_btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/exit_button"
        android:fontFamily="@font/amiko_bold"
        android:text="@string/home_string"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_btn_playAgain" />

    <Button
        android:id="@+id/result_btn_playAgain"
        android:layout_width="237dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/play_again_effect"
        android:fontFamily="@font/amiko_bold"
        android:text="@string/play_again_string"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_txt_followScore"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="50dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/result_txt_leadName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="LeadName"
                android:textColor="@color/white"
                android:textSize="28sp"
                app:autoSizeTextType="uniform"/>

        <TextView
            android:id="@+id/result_txt_chose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amiko_semibold"
            android:text=" was asked:"
            android:textColor="@color/white"
            android:textSize="28sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/result_txt_youchose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/amiko_semibold"
        android:text="You guessed:"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_txt_question" />

    <TextView
        android:id="@+id/result_txt_qguessed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/baloo"
        android:text="[question guessed] [.......................]"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic"
        app:autoSizeTextType="uniform"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_txt_youchose" />


</androidx.constraintlayout.widget.ConstraintLayout>