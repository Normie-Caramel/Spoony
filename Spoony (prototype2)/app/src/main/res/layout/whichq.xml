<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".WhichQuestion" android:id="@+id/whichq_lyt_main"
>

    <View
            android:id="@+id/view_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/default_background_style"
            android:nestedScrollingEnabled="false"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="[leadname]"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/whichq_txt_leadName" android:textSize="24sp"
            android:fontFamily="@font/baloo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/whichq_txt_answer"
            app:layout_constraintTop_toBottomOf="@id/whichq_txt_whichqdid"/>
    <Button
            android:text="A. "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/whichq_btn_OptA" android:fontFamily="@font/baloo"
            app:layout_constraintTop_toBottomOf="@id/whichq_txt_leadName"
            app:layout_constraintBottom_toTopOf="@id/whichq_btn_OptB" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" android:textSize="24sp"/>
    <Button
            android:text="B. "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/whichq_btn_OptB" android:fontFamily="@font/baloo"
            app:layout_constraintTop_toBottomOf="@id/whichq_btn_OptA"
            app:layout_constraintBottom_toTopOf="@id/whichq_btn_OptC" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" android:textSize="24sp"/>
    <Button
            android:text="C. "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/whichq_btn_OptC" android:fontFamily="@font/baloo"
            app:layout_constraintTop_toBottomOf="@id/whichq_btn_OptB" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toTopOf="@id/whichq_btn_next"
            android:layout_marginBottom="8dp" android:textSize="24sp"/>
    <Button
            android:text="NEXT"
            android:layout_width="174dp"
            android:layout_height="74dp" android:id="@+id/whichq_btn_next"
            android:background="@drawable/cloud_back_2"
            app:layout_constraintTop_toBottomOf="@id/whichq_btn_OptC" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="24dp"
            android:fontFamily="@font/baloo" android:textSize="24sp" android:clickable="false"
            android:textColor="@android:color/darker_gray" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Which question did"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/whichq_txt_whichqdid"
            android:fontFamily="@font/baloo" android:textSize="24sp"
            android:textAlignment="center" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/whichq_txt_leadName" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    <TextView
            android:text="answer?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/whichq_txt_answer"
            android:fontFamily="@font/baloo" android:textSize="24sp"
            android:textAlignment="center" app:layout_constraintBottom_toTopOf="@id/whichq_btn_OptA"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/whichq_txt_leadName"/>
</androidx.constraintlayout.widget.ConstraintLayout>